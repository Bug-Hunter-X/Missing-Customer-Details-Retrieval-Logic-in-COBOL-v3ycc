01  WS-DATA-AREA.
    05  WS-CUSTOMER-ID PIC 9(5).
    05  WS-CUSTOMER-NAME PIC X(30).
    05  WS-BALANCE PIC 9(7)V99.

01  CUSTOMER-TABLE.
    05  CUSTOMER-ENTRY OCCURS 3 TIMES.
        10  CUST-ID PIC 9(5).
        10  CUST-NAME PIC X(30).
        10  CUST-BAL PIC 9(7)V99.

PROCEDURE DIVISION.
    DISPLAY "Enter Customer ID:"
    ACCEPT WS-CUSTOMER-ID
    
    IF WS-CUSTOMER-ID > 99999 THEN
        DISPLAY "Invalid Customer ID"
        STOP RUN
    END-IF
    
    PERFORM GET-CUSTOMER-DETAILS
    
    DISPLAY "Customer Name:" WS-CUSTOMER-NAME
    DISPLAY "Balance:" WS-BALANCE
    
    STOP RUN.

GET-CUSTOMER-DETAILS SECTION.
    MOVE 12345 TO CUSTOMER-TABLE(1).CUST-ID
    MOVE 'Alice' TO CUSTOMER-TABLE(1).CUST-NAME
    MOVE 1200.00 TO CUSTOMER-TABLE(1).CUST-BAL

    MOVE 67890 TO CUSTOMER-TABLE(2).CUST-ID
    MOVE 'Bob' TO CUSTOMER-TABLE(2).CUST-NAME
    MOVE 5678.90 TO CUSTOMER-TABLE(2).CUST-BAL

    MOVE 13579 TO CUSTOMER-TABLE(3).CUST-ID
    MOVE 'Charlie' TO CUSTOMER-TABLE(3).CUST-NAME
    MOVE 2345.67 TO CUSTOMER-TABLE(3).CUST-BAL

    PERFORM VARYING I FROM 1 BY 1 UNTIL I > 3
        IF WS-CUSTOMER-ID = CUSTOMER-TABLE(I).CUST-ID THEN
            MOVE CUSTOMER-TABLE(I).CUST-NAME TO WS-CUSTOMER-NAME
            MOVE CUSTOMER-TABLE(I).CUST-BAL TO WS-BALANCE
            EXIT PERFORM
        END-IF
    END-PERFORM
END SECTION.
